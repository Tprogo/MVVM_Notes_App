<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:name="com.example.searchnotesappviewmodel.NotesApplication"


        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_notes"
        android:label="Search Notes MVVM"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CompanionObjectNotesApp"
        tools:targetApi="31">
        <activity
            android:name="com.example.searchnotesappviewmodel.UpdateActivity"
            android:exported="false" />
        <activity
            android:name="com.example.searchnotesappviewmodel.AddNotesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.searchnotesappviewmodel.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>